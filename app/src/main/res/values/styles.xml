<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ThemeBlue" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/blue_dark</item>
        <item name="colorAccent">@color/blue_accent</item>
        <item name="colorDisable">@color/blue_light</item>
        <item name="textColor">@color/white</item>
        <item name="rippleColor">@color/blue_deep</item>
        <item name="viewBackground">@color/white</item>
    </style>

    <style name="ThemeRed" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryDark">@color/red_dark</item>
        <item name="colorAccent">@color/red_accent</item>
        <item name="colorDisable">@color/red_light</item>
        <item name="rippleColor">@color/red_deep</item>
        <item name="textColor">@color/white</item>
        <item name="viewBackground">@color/white</item>
    </style>

    <style name="DialogBlue" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/blue_dark</item>
        <item name="colorAccent">@color/blue_accent</item>
    </style>

    <style name="DialogRed" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryDark">@color/red_dark</item>
        <item name="colorAccent">@color/red_accent</item>
    </style>
</resources>
