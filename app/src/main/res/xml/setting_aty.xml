<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="外观">
        <ListPreference
            android:key="theme"
            android:title="主题"
            android:summary="选择主题"
            android:entries="@array/theme_name"
            android:entryValues="@array/theme_value" />
    </PreferenceCategory>
    <PreferenceCategory android:title="通用设置">
        <EditTextPreference
            android:key="advance_time"
            android:title="提前启动"
            android:summary="单位为分"
            android:numeric="integer"
            android:dialogTitle="输入设置"
            android:defaultValue="5" />
        <EditTextPreference
            android:key="time_out"
            android:title="超时时长"
            android:summary="单位为分"
            android:numeric="integer"
            android:dialogTitle="输入设置"
            android:defaultValue="3" />
        <EditTextPreference
            android:key="interval_time"
            android:title="间隔时间"
            android:summary="单位为秒"
            android:numeric="integer"
            android:dialogTitle="输入设置"
            android:defaultValue="2" />
        <EditTextPreference
            android:key="retry_times"
            android:title="登录失败重试次数"
            android:summary="点击输入"
            android:numeric="integer"
            android:dialogTitle="输入设置"
            android:defaultValue="3" />
    </PreferenceCategory>
</PreferenceScreen>
